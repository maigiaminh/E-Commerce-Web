@model E_Commerce_Web.Models.Blog

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<h2 class="mb-4">Create Blog</h2>

@using (Html.BeginForm("Create", "AdminBlogs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4 class="mb-3">Blog Details</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <div class="mb-3">
            @Html.LabelFor(model => model.Title, "Title", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the blog title" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Content, "Content", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = 5, placeholder = "Write the blog content here..." })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.ImageUrl, "Image", htmlAttributes: new { @class = "form-label fw-bold" })
            <input type="file" name="ImageFile" id="ImageFileInput" class="form-control" />
            @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.CreatedAt, "Created At", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
            @Html.ValidationMessageFor(model => model.CreatedAt, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Author, "Author", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter the author's name" } })
            @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <input type="submit" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
