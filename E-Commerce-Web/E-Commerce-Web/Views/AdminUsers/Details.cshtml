@model E_Commerce_Web.Models.User

@{
    ViewBag.Title = "User Details";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">User Details</h2>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">User Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-4">Password</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PasswordHash)</dd>

                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-4">Province</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Province)</dd>

                <dt class="col-sm-4">District</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.District)</dd>

                <dt class="col-sm-4">Active</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Active)</dd>

                <dt class="col-sm-4">Verification Token</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.VerificationToken)</dd>

                <dt class="col-sm-4">Created At</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-4">Avatar</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Avatar)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.UserID }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
