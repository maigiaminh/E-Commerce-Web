@model E_Commerce_Web.Models.ProductSize

@{
    ViewBag.Title = "Product Size Details";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container mt-4">
    <h2 class="mb-4">Product Size Details</h2>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Product Size Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Product Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.ProductName)</dd>

                <dt class="col-sm-4">Size Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Size.Name)</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { productId = Model.ProductID, sizeId = Model.SizeID }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
