@model IEnumerable<E_Commerce_Web.Models.ProductSize>

@{
    ViewBag.Title = "Product Sizes";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}

<link rel="stylesheet" href="~/wwwroot/css/CRUD_Theme.css" />

<h2>Product Sizes</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-lg-start">@Html.DisplayNameFor(model => model.Product.ProductName)</th>
                <th class="text-lg-start">@Html.DisplayNameFor(model => model.Size.Name)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.Stock)</th>
                <th class="text-center" style="width: 150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0 && Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Product.ProductName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Size.Name)</td>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td class="text-center action-links">
                            @Html.ActionLink("Edit", "Edit", new { productId = item.ProductID, sizeId = item.SizeID }, new { @class = "btn btn-info btn-sm me-1" })
                            @Html.ActionLink("Details", "Details", new { productId = item.ProductID, sizeId = item.SizeID }
                            , new { @class = "btn btn-primary btn-sm me-1" })
                            @Html.ActionLink("Delete", "Delete", new { productId = item.ProductID, sizeId = item.SizeID }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    .action-links .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .table th {
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }
</style>
