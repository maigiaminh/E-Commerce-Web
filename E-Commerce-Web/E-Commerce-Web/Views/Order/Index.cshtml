}



<div class="container">
    <!-- Order Header -->
    <div class="header">
        <div>
            <p><strong>Chi tiết đơn hàng</strong></p>
            <p>Mã đơn hàng: <span style="font-weight: normal;">00198S2410001698</span></p>
            <p>21/10/2024 19:29</p>
        </div>
        <a href="#">Xem hóa đơn VAT</a>
    </div>

    <!-- Order Item -->
    <div class="order-info">
        <div class="order-item">
            <img src="https://via.placeholder.com/100" alt="Product Image">
            <div>
                <h4>Màn hình di động ViewSonic VA1655 15.6 inch</h4>
                <p>Số lượng: 1</p>
                <button>Đánh giá</button>
