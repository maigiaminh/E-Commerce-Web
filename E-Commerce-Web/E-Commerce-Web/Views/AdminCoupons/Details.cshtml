@model E_Commerce_Web.Models.Coupon

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<div class="container mt-4">
    <h2 class="mb-4">Coupon Details</h2>
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Coupon Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Code</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>

                <dt class="col-sm-4">Discount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Discount)</dd>

                <dt class="col-sm-4">Expiration Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ExpirationDate)</dd>

                <dt class="col-sm-4">Is Active</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CouponID }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
