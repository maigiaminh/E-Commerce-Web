@model E_Commerce_Web.Models.Order

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/Sections/Menu/_VerticalMenu.cshtml";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<div class="container mt-4">
    <h2 class="mb-4">Order Details</h2>

    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Order Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</dd>

                <dt class="col-sm-4">Order Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderDate)</dd>

                <dt class="col-sm-4">Discount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Discount)</dd>

                <dt class="col-sm-4">Shipping Fee</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ShippingFee)</dd>

                <dt class="col-sm-4">Total Amount</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TotalAmount)</dd>

                <dt class="col-sm-4">Subtotal</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Subtotal)</dd>

                <dt class="col-sm-4">Payment Method</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PaymentMethod)</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4">Recipient Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.RecipientName)</dd>

                <dt class="col-sm-4">Recipient Phone</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.RecipientPhone)</dd>

                <dt class="col-sm-4">Recipient Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.RecipientAddress)</dd>

                <dt class="col-sm-4">Note</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Note)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.OrderID }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
